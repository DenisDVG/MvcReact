@model MvcReact.ViewModels.NoteViewModel

@{
    ViewBag.Title = "Create Note";
}

<h1>Create a New Note</h1>

@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

@using (Html.BeginForm("Create", "Note", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Title)
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Content)
        @Html.TextAreaFor(model => model.Content, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Content)
    </div>

    <div class="form-group">
        <input type="submit" value="Create Note" class="btn btn-primary" />
    </div>
}

@Html.ActionLink("Back to Notes", "Index", "Note", null, new { @class = "btn btn-secondary" })